<!DOCTYPE html>
<html>
<head>
    <title>Online Ordering System</title>

    <!-- css -->
    @Styles.Render("~/Content/stylesheets")
</head>
<body>
    <!-- navbar menu -->
    <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <img src="../images/store.png" alt="Flower" class="navcode">
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Home </a></li>
                        <li><a href="about.html">About us </a></li>
                        <li><a href="#">Contact us</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Register", "Account")"> Sign Up</a></li>
                        <li><a href="@Url.Action("Login", "Account")"> Login</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <br /><br /><br /><br />
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading panel-heading-custom">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#" class="panel-menu">
                                    Home
                                </a>
                            </h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading panel-heading-custom">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse2" class="panel-menu">
                                Bags <span class="glyphicon glyphicon-chevron-down pull-right"></span>
                            </a>
                        </div>
                        <div id="collapse2" class="panel-collapse collapse">
                            <div class="div-menu-custom">
                                <a href="#" class="a-link"> Back Back</a>
                                <a href="#" class="a-link"> Sling</a>
                                <a href="#" class="a-link"> Net Bag</a>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading panel-heading-custom">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse3" class="panel-menu">
                                Furniture <span class="glyphicon glyphicon-chevron-down pull-right"></span>
                            </a>
                        </div>
                        <div id="collapse3" class="panel-collapse collapse">
                            <div class="div-menu-custom">
                                <a href="#" class="a-link"> Sofa</a>
                                <a href="#" class="a-link"> Bed</a>
                                <a href="#" class="a-link"> Chair</a>
                                <a href="#" class="a-link"> Table</a>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading panel-heading-custom">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse4" class="panel-menu">
                                Gadgets <span class="glyphicon glyphicon-chevron-down pull-right"></span>
                            </a>
                        </div>
                        <div id="collapse4" class="panel-collapse collapse">
                            <div class="div-menu-custom">
                                <a href="#" class="a-link"> Mobile phones</a>
                                <a href="#" class="a-link"> Tablets</a>
                                <a href="#" class="a-link"> Laptops</a>
                                <a href="#" class="a-link"> Computers</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="search diri">
                    <div class="input-group-btn">
                        <button class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Search</button>
                    </div>
                </div>

                <br>
                <div id="myCarousel" class="carousel slide" data-ride="carousel">

                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="3" class="active"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox" align="center">
                        <div class="item active">
                            <img src="../images/Desert.jpg" alt="Chania" class="carouselImage">
                        </div>

                        <div class="item">
                            <img src="../images/Hydrangeas.jpg" alt="Chania" class="carouselImage">
                        </div>

                        <div class="item">
                            <img src="../images/Jellyfish.jpg" alt="Flower" class="carouselImage">
                        </div>

                        <div class="item">
                            <img src="../images/Penguins.jpg" alt="Flower" class="carouselImage">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <br>
            </div>
            <!-- Ads -->
            <div class="col-md-2">
                <div class="panel panel-default" style="height: 100px">
                    <div class="container">
                        Ads
                    </div>
                </div>
                <br />
                <div class="panel panel-default" style="height: 100px">
                    <div class="container">
                        Ads
                    </div>
                </div>
                <br />
                <div class="panel panel-default" style="height: 100px">
                    <div class="container">
                        Ads
                    </div>
                </div>
                <br />
                <div class="panel panel-default" style="height: 100px">
                    <div class="container">
                        Ads
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <!-- Section -->
    <section>
        <div class="container">
            <hr />
            <br />
            <center><h3>Sample products</h3></center>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <center><img src="../images/tables.jpg" class="secimages"></center>
                        </div>
                        <div class="panel-footer">Panel Footer</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <center><img src="../images/sofa.jpg" class="secimages"></center>
                        </div>
                        <div class="panel-footer">Panel Footer</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <center><img src="../images/wood.jpg" class="secimages"> </center>
                        </div>
                        <div class="panel-footer">Panel Footer</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- scripts -->
    @Scripts.Render("~/Scripts/js")

</body>
</html>

