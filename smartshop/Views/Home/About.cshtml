                    <a href="@Url.Action("Index","Home")" class="navbar-brand"><b>smartSHOP.com</b></a>
                    @*<img src="../images/store.png" alt="Flower" class="navcode">*@
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Index","Home")">Home </a></li>
                        <li class="active"><a href="@Url.Action("About","Home")">About</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Register", "Account")"> Sign Up</a></li>
                        <li><a href="@Url.Action("Login", "Account")"> Log in</a></li>
