    <script type="text/javascript">
        // globla varialbles
        var customerDetailsReserveds;
        var customerDetailsRenteds;

        //get reserved
        function getCustomerDetails() {
           
        }


        function getCustomerDetailsRented() {
            var userId = "@userId";
            $.ajax({
                url: '/api/customer/listCustomerByUserId/' + userId,
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {

                    document.getElementById('vrRetrieve_CustomerName').innerHTML = Results.CustomerName;
                    document.getElementById('vrRetrieve_Address').innerHTML = Results.CustomerAddress;


                    var customerId = @CustomerId;
                    var customerDetails = new Array();
                    $.ajax({
                        url: '/api/customerDetailsByCustomerId/' + customerId,
                        cache: false,
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        success: function (Results) {
                            if (Results.length > 0) {
                                for (i = 0; i < Results.length; i++) {
                                    customerDetails.push({
                                        Id: Results[i]["Id"],
                                        ReservedDate: Results[i]["ReservedDate"],
                                        ReservedVideoke: Results[i]["ReservedVideoke"],
                                        ReservedVideokePrice: Results[i]["ReservedVideokePrice"],
                                        RentedDate: Results[i]["RentedDate"],
                                        RentedVideoke: Results[i]["RentedVideoke"],
                                        RentedVideokePrice: Results[i]["RentedVideokePrice"],
                                    });
                                }
                            }
                    
                   
                            $('#tblCustomerDetailsReserved').dataTable({
                                aaData: customerDetails,
                                aoColumns: [
                                        { mData: 'ReservedDate' },
                                        { mData: 'ReservedVideoke' },
                                        { mData: 'ReservedVideokePrice' },

                                ]
                            });

                            $('#menuRental').click(function () {
                                $('#rental').show();
                                $('#reservation').hide();

                                var table = $('#tblCustomerDetailsRented').DataTable();
                                table.destroy();
                                $('#tblCustomerDetailsRented').dataTable({
                                    aaData: customerDetails,
                                    aoColumns: [
                                            { mData: 'RentedDate' },
                                            { mData: 'RentedVideoke' },
                                            { mData: 'RentedVideokePrice' },
                                    ]
                                });
                            });
                        }
                    });
                }
            });

        }



        $(document).ready(function () {
            getCustomerDetails();
            $('#tabs').tab();

            $('#menuReservation').click(function () {
                $('#reservation').show();
                $('#rental').hide();

            });
            getCustomerDetailsRented();
        });

    </script>
