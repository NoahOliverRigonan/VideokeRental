    <script type="text/javascript">
        // global variables
        var products;

        // get Products
        function getProduct() {
            products = new Array();
            $('#LabelItems').hide();
            $('#loadingVideoke').show();

            setTimeout(function () {
                $.ajax({
                    url: '/api/product/list',
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json; charset=utf-8',
                    success: function (Results) {
                        if (Results.length > 0) {
                            $('#LabelItems').hide();
                            $('#loadingVideoke').hide();
                            for (i = 0; i < Results.length; i++) {
                                products.push({
                                    EditId: '<button class="btn btn-primary btn-sm btn-block" onclick="btnEditButton()"><span class="glyphicon glyphicon-edit"></span> Edit</button>',
                                    DeleteId: '<button class="btn btn-danger btn-sm btn-block" onclick="btnDeleteButton()"><span class="glyphicon glyphicon-trash"></span> Delete</button>',
                                    Id: Results[i]["Id"],
                                    Images: Results[i]["Images"],
                                    ProductNumber: Results[i]["ProductNumber"],
                                    ProductName: Results[i]["ProductName"],
                                    ProductDescription: Results[i]["ProductDescription"],
                                    IsRented: Results[i]["IsRented"],
                                    IsReserved: Results[i]["IsReserved"],
                                    Price: Results[i]["Price"],
                                });

                                if (Results[i]["IsReserved"] == true) {
                                    var faDeleteElement = document.createElement("I");
                                    faDeleteElement.setAttribute('class', 'fa fa-close');

                                    var faEditElement = document.createElement("I");
                                    faEditElement.setAttribute('class', 'fa fa-edit');

                                    var stringReservedOrRent;
                                    var colorForReserveOrRent;
                                    if (Results[i]["IsRented"] == true) {
                                        stringReservedOrRent = "RENTED";
                                        colorForReserveOrRent = "red"
                                    } else {
                                        stringReservedOrRent = "RESERVED";
                                        colorForReserveOrRent = "yellowgreen"
                                    }

                                    // button delete
                                    var buttonDeleteElement = document.createElement("BUTTON");
                                    //var buttonDeleteValue = document.createTextNode("Delete");
                                    buttonDeleteElement.appendChild(faDeleteElement);
                                    buttonDeleteElement.setAttribute('class', 'btn btn-danger btn-xs pull-right');
                                    buttonDeleteElement.setAttribute('onclick', 'btnDeleteButton(' + Results[i]["Id"] + ')');
                                    buttonDeleteElement.setAttribute('disabled', '');

                                    // button edit
                                    var buttonEditElement = document.createElement("BUTTON");
                                    //var buttonDeleteValue = document.createTextNode("Delete");
                                    buttonEditElement.appendChild(faEditElement);
                                    buttonEditElement.setAttribute('class', 'btn btn-primary btn-xs pull-right');
                                    buttonEditElement.setAttribute('onclick', 'btnEditButton(' + Results[i]["Id"] + ')');
                                    buttonEditElement.setAttribute('disabled', '');

                                    // product reserved boolean
                                    var productIsReservedElement = document.createElement("LABEL");
                                    var productIsReservedTextNode = document.createTextNode(stringReservedOrRent);
                                    productIsReservedElement.appendChild(productIsReservedTextNode);
                                    productIsReservedElement.style.color = colorForReserveOrRent;
                                    productIsReservedElement.style.cssFloat = "left";
                                    productIsReservedElement.setAttribute('class', 'reservedLabel');
                                } else {
                                    var faDeleteElement = document.createElement("I");
                                    faDeleteElement.setAttribute('class', 'fa fa-close');

                                    var faEditElement = document.createElement("I");
                                    faEditElement.setAttribute('class', 'fa fa-edit');

                                    
                                    // button delete
                                    var buttonDeleteElement = document.createElement("BUTTON");
                                    //var buttonDeleteValue = document.createTextNode("Delete");
                                    buttonDeleteElement.appendChild(faDeleteElement);
                                    buttonDeleteElement.setAttribute('class', 'btn btn-danger btn-xs pull-right');
                                    buttonDeleteElement.setAttribute('onclick', 'btnDeleteButton(' + Results[i]["Id"] + ')');

                                    // button delete
                                    var buttonEditElement = document.createElement("BUTTON");
                                    //var buttonDeleteValue = document.createTextNode("Delete");
                                    buttonEditElement.appendChild(faEditElement);
                                    buttonEditElement.setAttribute('class', 'btn btn-primary btn-xs pull-right');
                                    buttonEditElement.setAttribute('onclick', 'btnEditButton(' + Results[i]["Id"] + ')');

                                    var productFontsElement = document.createElement("I");
                                    productFontsElement.setAttribute('class', 'fa fa-check');

                                    var stringReservedOrRent;
                                    var colorForReserveOrRent;
                                    if (Results[i]["IsRented"] == true) {
                                        stringReservedOrRent = "RENTED";
                                        colorForReserveOrRent = "red"
                                        buttonDeleteElement.setAttribute('disabled', '');
                                        buttonEditElement.setAttribute('disabled', '');
                                    } else {
                                        stringReservedOrRent = "AVAILABLE";
                                        colorForReserveOrRent = "skyblue"
                                    }

                                    // product reserved boolean
                                    var productIsReservedElement = document.createElement("LABEL");
                                    var productIsReservedTextNode = document.createTextNode(stringReservedOrRent);
                                    productIsReservedElement.appendChild(productIsReservedTextNode);
                                    productIsReservedElement.style.color = colorForReserveOrRent;
                                    productIsReservedElement.style.cssFloat = "left";
                                    productIsReservedElement.setAttribute('class', 'reservedLabel');
                                }

                                // product Id
                                var productIdElement = document.createElement("INPUT");
                                //var productIdTextNode = document.createTextNode(Results[i]["Id"]);
                                //productIdElement.appendChild(productIdTextNode);
                                productIdElement.setAttribute('value', Results[i]["Id"]);
                                productIdElement.setAttribute('type', 'hidden');
                                productIdElement.setAttribute('Id', 'productId');

                                // button view Details
                                var buttonViewDetailsElement = document.createElement("BUTTON");
                                var buttonValue = document.createTextNode("View Details");
                                buttonViewDetailsElement.appendChild(buttonValue);
                                buttonViewDetailsElement.setAttribute('class', 'btn btn-success btn-lg');
                                buttonViewDetailsElement.setAttribute('onclick', 'btnViewDetailsButton(' + Results[i]["Id"] + ')');

                                // product Div
                                var productDIVElement = document.createElement("DIV");

                                // product Title
                                var productNameElement = document.createElement("H3");
                                var productNameTextNode = document.createTextNode(Results[i]["ProductName"]);
                                productNameElement.appendChild(productNameTextNode);

                                // product Price
                                var priceElement = document.createElement("H3");
                                var priceTextNode = document.createTextNode('₱ ' + Results[i]["Price"].toFixed(2));
                                priceElement.appendChild(priceTextNode);

                                // product Description
                                var productDescriptionElement = document.createElement("P");
                                var productDescriptionTextNode = document.createTextNode(Results[i]["ProductDescription"]);
                                productDescriptionElement.appendChild(productDescriptionTextNode);

                                // product Image
                                var productImageElement = document.createElement("images");
                                var imageData = new Image();
                                imageData.src = "data:image/jpeg;base64," + hexToBase64(Results[i]["Images"]);
                                imageData.className = "imageCSS";
                                productImageElement.appendChild(imageData);

                                var overlayDivision = document.getElementById("overlayId").appendChild(productDIVElement);
                                
                                overlayDivision.appendChild(productIsReservedElement);
                                overlayDivision.appendChild(buttonDeleteElement);
                                overlayDivision.appendChild(buttonEditElement);

                                var BR4 = document.createElement("BR");
                                overlayDivision.appendChild(BR4);
                                var BR5 = document.createElement("BR");
                                overlayDivision.appendChild(BR5);
                                var BR6 = document.createElement("BR");
                                overlayDivision.appendChild(BR6);

                                overlayDivision.setAttribute('class', 'overlay');
                                overlayDivision.appendChild(productIdElement);
                                overlayDivision.appendChild(productNameElement);
                                // product br
                                var BR = document.createElement("BR");
                                overlayDivision.appendChild(BR);
                                overlayDivision.appendChild(productDescriptionElement);

                                // product br2
                                var BR2 = document.createElement("BR");
                                overlayDivision.appendChild(BR2);
                                overlayDivision.appendChild(buttonViewDetailsElement);

                                // product br3, br4
                                var BR4 = document.createElement("BR");
                                overlayDivision.appendChild(BR4);
                                overlayDivision.appendChild(priceElement);

                                // product br5, br6
                                var BR5 = document.createElement("BR");
                                overlayDivision.appendChild(BR5);
                                overlayDivision.appendChild(buttonViewDetailsElement)


                                // division
                                var imageDivision = document.getElementById("imageDiv").appendChild(productImageElement);
                                imageDivision.setAttribute("class", "col-md-6 border-custom hovereffect");
                                imageDivision.appendChild(overlayDivision);
                                ////imageDivision.appendChild(productNameElement);
                                //imageDivision.appendChild(productDescriptionElement);
                                //imageDivision.appendChild(buttonViewDetailsElement);


                            }
                        } else {
                            if (Results.length == 0) {
                                $('#LabelItems').show();
                                $('#loadingVideoke').hide();
                            }
                        }
                    }
                });
            }, 1000);

            return products;
        }

        function btnViewDetailsButton(videokeId) {
            window.location.href = "/Software/VideokeDetails?VideokeId=" + videokeId;

        }

        // convert image to hex
        function hexToBase64(str) {
            return btoa(String.fromCharCode.apply(null, str.replace(/\r|\n/g, "").replace(/([\da-fA-F]{2}) ?/g, "0x$1 ").replace(/ +$/, "").split(" ")));
        }

        // Add Product
        function btnSaveProduct() {
            var productObject = new Object();

            var productId = document.getElementById('product_Id').value;
            productObject.ProductNumber = document.getElementById('product_ProductNumber').value;
            productObject.ProductName = document.getElementById('product_ProductName').value;
            productObject.ProductDescription = document.getElementById('product_ProductDescription').value;
            productObject.Price = document.getElementById('product_ProductPrice').value;
            var images = $('#product_ImageDisplay').attr('src');;
            var ImageSave = images.replace("data:image/jpeg;base64,", "");

            productObject.Images = ImageSave;
            var productData = JSON.stringify(productObject);

            var isValid = true;
            $('.requiredVideoke').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                }
                else {
                    $(this).css({
                        "border": "",
                    });
                }
            });
            if (isValid == false) {
                toastr.error("Invalid Entry");
            }
            else {
                if (productId == 0) {
                    $.ajax({
                        type: "POST",
                        url: '/api/product/add',
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data: productData,
                        statusCode: {
                            200: function () {
                                toastr.success("Successfully add");
                                setTimeout(function () {
                                    window.location.reload(1);
                                }, 1000);
                            },
                            404: function () {
                                alert("Not Found");
                            },
                            500: function () {
                                alert("Bad Request");
                            }
                        }
                    });
                } else {
                    $.ajax({
                        type: "PUT",
                        url: '/api/updateProduct/' + productId,
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data: productData,
                        statusCode: {
                            200: function () {
                                toastr.success("Successfully updated");
                                setTimeout(function () {
                                    window.location.reload(1);
                                }, 1000);
                            },
                            404: function () {
                                alert("Not Found");
                            },
                            500: function () {
                                alert("Bad Request");
                            }
                        }
                    });
                }
            }

        }

        // edit
        function btnEditButton(productId) {
            $('#myModal').modal({
                show: true,
                backdrop: 'static'
            });

            $('#product_ImageDisplay').hide();
            $('#product_Image').val("");

            $.ajax({
                url: '/api/product/getId/' + productId,
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {
                    if (Results.length > 0) {
                        products.push({
                            EditId: '<button class="btn btn-primary btn-sm btn-block" onclick="btnEditButton()"><span class="glyphicon glyphicon-edit"></span> Edit</button>',
                            DeleteId: '<button class="btn btn-danger btn-sm btn-block" onclick="btnDeleteButton()"><span class="glyphicon glyphicon-trash"></span> Delete</button>',
                            Id: Results.Id,
                            Images: Results.Images,
                            ProductNumber: Results.ProductNumber,
                            ProductName: Results.ProductName,
                            ProductDescription: Results.ProductDescription,
                            IsRented: Results.IsRented,
                            IsReserved: Results.IsReserved,
                            Price: Results.Price
                        });
                    }

                    document.getElementById('product_Id').value = Results.Id;

                    //var image = Results.Images;
                    //var srcImage = "data:image/jpeg;base64," + hexToBase64(Results.Images)

                    //// product Image
                    //var productImageElement = document.createElement("product_ImageDisplay");
                    //productImageElement.setAttribute("src", "data:image/jpeg;base64," + hexToBase64(Results.Images))
                    //productImageElement.setAttribute('class', 'imageCSS');


                    //imageDisplayForEdit

                    // product Image
                    var productImageElement = document.createElement("images");
                    var imageData = new Image();
                    imageData.src = "data:image/jpeg;base64," + hexToBase64(Results.Images);
                    imageData.className = "imageCSS";
                    productImageElement.appendChild(imageData);

                    var imageDivision = document.getElementById("imageDisplayForEdit").appendChild(productImageElement);

                    document.getElementById('product_ProductNumber').value = Results.ProductNumber;
                    document.getElementById('product_ProductName').value = Results.ProductName;
                    document.getElementById('product_ProductDescription').value = Results.ProductDescription;
                    document.getElementById('product_ProductPrice').value = Results.Price;
                }
            });

        }

        $('#closeModal').click(function () {
            $('#imageDisplayForEdit').children("images").remove();
        });

        // delete
        function btnDeleteButton(productId) {
            console.log(productId);
            alertify.confirm("Delete?", function (e) {
                if (e) {
                    $.ajax({
                        type: "DELETE",
                        url: '/api/deleteProduct/' + productId,
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        statusCode: {
                            200: function () {
                                toastr.success("Successfully deleted");
                                setTimeout(function () {
                                    window.location.reload(1);
                                }, 1000);
                            },
                            404: function () {
                                alert("Not Found");
                            },
                            500: function () {
                                alert("Bad Request");
                            }
                        }
                    });
                }
            });
        }
        function btnDeleteProduct() {
            alertify.confirm("Delete?", function (e) {
                if (e) {
                    var productId = document.getElementById('deleteProductId').value;

                    $.ajax({
                        type: "DELETE",
                        url: '/api/deleteProduct/' + productId,
                        contentType: "application/json; charset=utf-8",
