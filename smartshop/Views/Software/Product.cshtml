    <script type="text/javascript">
        // global variables
        var products;

        // get Products
        function getProduct() {
            products = new Array();
            $.ajax({
                url: '/api/product/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {
                    if (Results.length > 0) {
                        $('#LabelItems').hide();
                        for (i = 0; i < Results.length; i++) {
                            products.push({
                                EditId: '<button class="btn btn-primary btn-sm btn-block" onclick="btnEditButton()"><span class="glyphicon glyphicon-edit"></span> Edit</button>',
                                DeleteId: '<button class="btn btn-danger btn-sm btn-block" onclick="btnDeleteButton()"><span class="glyphicon glyphicon-trash"></span> Delete</button>',
                                Id: Results[i]["Id"],
                                Images: Results[i]["Images"],
                                ProductNumber: Results[i]["ProductNumber"],
                                ProductName: Results[i]["ProductName"],
                                ProductDescription: Results[i]["ProductDescription"]
                            });

                            // product Id
                            var productIdElement = document.createElement("INPUT");
                            //var productIdTextNode = document.createTextNode(Results[i]["Id"]);
                            //productIdElement.appendChild(productIdTextNode);
                            productIdElement.setAttribute('value', Results[i]["Id"]);
                            productIdElement.setAttribute('type', 'hidden');
                            productIdElement.setAttribute('Id', 'productId');

                            // button view Details
                            var buttonViewDetailsElement = document.createElement("BUTTON");
                            var buttonValue = document.createTextNode("View Details");
                            buttonViewDetailsElement.appendChild(buttonValue);
                            buttonViewDetailsElement.setAttribute('class', 'btn btn-success btn-block');

                            // button delete
                            var buttonDeleteElement = document.createElement("BUTTON");
                            var buttonDeleteValue = document.createTextNode("Delete");
                            buttonDeleteElement.appendChild(buttonDeleteValue);
                            buttonDeleteElement.setAttribute('class', 'btn btn-danger btn-block');
                            buttonDeleteElement.setAttribute('onclick', 'btnDeleteButton(' + Results[i]["Id"] + ')');

                            // product Div
                            var productDIVElement = document.createElement("DIV");
                            // product br
                            var BR = document.createElement("BR");

                            // product Title
                            var productNameElement = document.createElement("H3");
                            var productNameTextNode = document.createTextNode(Results[i]["ProductName"]);
                            productNameElement.appendChild(productNameTextNode);

                            // product Description
                            var productDescriptionElement = document.createElement("P");
                            var productDescriptionTextNode = document.createTextNode(Results[i]["ProductDescription"]);
                            productDescriptionElement.appendChild(productDescriptionTextNode);

                            // product Image
                            var productImageElement = document.createElement("images");
                            var imageData = new Image();
                            imageData.src = "data:image/jpeg;base64," + hexToBase64(Results[i]["Images"]);
                            imageData.className = "imageCSS img-thumbnail";
                            productImageElement.appendChild(imageData);

                            var overlayDivision = document.getElementById("overlayId").appendChild(productDIVElement);
                            overlayDivision.setAttribute('class', 'overlay');
                            overlayDivision.appendChild(productIdElement);
                            overlayDivision.appendChild(productNameElement); 
                            overlayDivision.appendChild(BR);
                            overlayDivision.appendChild(productDescriptionElement);
                            overlayDivision.appendChild(BR);
                            overlayDivision.appendChild(buttonViewDetailsElement);
                            overlayDivision.appendChild(buttonDeleteElement);
                            
                            // division
                            var imageDivision = document.getElementById("imageDiv").appendChild(productImageElement);
                            imageDivision.setAttribute("class", "col-md-6 border-custom hovereffect");
                            imageDivision.appendChild(overlayDivision);
                            ////imageDivision.appendChild(productNameElement);
                            //imageDivision.appendChild(productDescriptionElement);
                            //imageDivision.appendChild(buttonViewDetailsElement);


                        }
                    } else {
                        if (Results.length == 0) {
                            $('#LabelItems').show();
                        }
                    }
                }
            });
            return products;
        }

        // convert image to hex
        function hexToBase64(str) {
            return btoa(String.fromCharCode.apply(null, str.replace(/\r|\n/g, "").replace(/([\da-fA-F]{2}) ?/g, "0x$1 ").replace(/ +$/, "").split(" ")));
        }

        // Add Product
        function btnSaveProduct() {
            var productObject = new Object();
            productObject.ProductNumber = document.getElementById('product_ProductNumber').value;
            productObject.ProductName = document.getElementById('product_ProductName').value;
            productObject.ProductDescription = document.getElementById('product_ProductDescription').value;

            var images = $('#product_ImageDisplay').attr('src');
            var ImageSave = images.replace("data:image/jpeg;base64,", "");
            //var submitval = JSON.stringify({ data: ImageSave });

            //productObject.Images = document.getElementById('product_Image_data').value;
            productObject.Images = ImageSave;

            console.log(ImageSave);


            var productData = JSON.stringify(productObject);

            var productId = document.getElementById('product_Id').value;
            if (productId == 0) {
                $.ajax({
                    type: "POST",
                    url: '/api/product/add',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: productData,
                    statusCode: {
                        200: function () {
                            location.reload();
                        },
                        404: function () {
                            alert("Not Found");
                        },
                        500: function () {
                            alert("Bad Request");
                        }
                    }
                });
            } else {
                $.ajax({
                    type: "PUT",
                    url: '/api/updateProduct/' + productId,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: productData,
                    statusCode: {
                        200: function () {
                            location.reload();
                        },
                        404: function () {
                            alert("Not Found");
                        },
                        500: function () {
                            alert("Bad Request");
                        }
                    }
                });
            }

        }

        // edit
        function btnEditButton() {
            $('#myModal').modal({
                show: true,
                backdrop: 'static'
            });

            var table = $('#table_id').DataTable();

            $('#table_id tbody').on('click', 'tr', function () {
                document.getElementById('product_Id').value = table.row(this).data().Id;
                document.getElementById('product_ProductNumber').value = table.row(this).data().ProductNumber;
                document.getElementById('product_ProductName').value = table.row(this).data().ProductName;
                document.getElementById('product_ProductDescription').value = table.row(this).data().ProductDescription;
            });
        }

        // delete
        function btnDeleteButton(productId) {
            console.log(productId);

            $.ajax({
                type: "DELETE",
                url: '/api/deleteProduct/' + productId,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        location.reload();
                    },
                    404: function () {
                        alert("Not Found");
                    },
                    500: function () {
                        alert("Bad Request");
                    }
                }
            });
        }
        function btnDeleteProduct() {
            var productId = document.getElementById('deleteProductId').value;

            $.ajax({
                type: "DELETE",
                url: '/api/deleteProduct/' + productId,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        location.reload();
                    },
                    404: function () {
                        alert("Not Found");
                    },
                    500: function () {
                        alert("Bad Request");
                    }
                }
            });
        }

        // Add
        function btnAddButton() {
            $('#myModal').modal({
                show: true,
                backdrop: 'static'
            });

            document.getElementById('product_Id').value = 0;
            document.getElementById('product_ProductNumber').value = "";
            document.getElementById('product_ProductName').value = "";
            document.getElementById('product_ProductDescription').value = "";
            document.getElementById('product_Image_data').value = "";
        }

        // Read URL image
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#product_ImageDisplay').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // onload image
        document.querySelector('#product_Image').addEventListener('change', function () {
            var reader = new FileReader();
            reader.onload = function () {
                var binaryString = this.result;
                //document.querySelector('#result').innerHTML = binaryString;
                //console.log(binaryString());
                document.getElementById('product_Image_data').value = binaryString;

            }
            reader.readAsBinaryString(this.files[0]);
        }, false);

        // On Load Page
        $(document).ready(function () {
            getProduct();
            $('#product_ImageDisplay').hide();

            $("#product_Image").change(function () {
                readURL(this);
                $('#product_ImageDisplay').show();
            });

        });
    </script>
