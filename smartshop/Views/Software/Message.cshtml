            return VideokeRentNotificationList;
        }

        // On Load Page
        $(document).ready(function () {
            var now = new Date();

            
            getVideokeReservationNotificationList()
            

            $('#menuReservation').click(function () {
                $('#reservation').show();
                $('#rental').hide();
            });

            $('#menuRental').click(function () {
                $('#reservation').hide();
                $('#rental').show();
                getVideokeRentNotificationList();
                window.getVideokeRentNotificationList = function () {
                    return true;
                }
            });

        });

