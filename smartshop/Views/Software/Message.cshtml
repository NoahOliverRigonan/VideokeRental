    @Scripts.Render("~/Scripts/js")
    <script type="text/javascript">
        // globla varialbles
        var VideokeReservationNotificationList;
        var VideokeRentNotificationList;


        function getVideokeReservationNotificationList() {
            VideokeReservationNotificationList = new Array();
            $.ajax({
                url: '/api/videokeRent/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {
                    if (Results.length > 0) {
                        for (i = 0; i < Results.length; i++) {
                            VideokeReservationNotificationList.push({
                                EditId: '<button class="btn btn-primary btn-sm btn-block" onclick="btnEditButton()"><span class="glyphicon glyphicon-edit"></span> Edit</button>',
                                DeleteId: '<button class="btn btn-danger btn-sm btn-block" onclick="btnDeleteButton()"><span class="glyphicon glyphicon-trash"></span> Delete</button>',
                                Id: Results[i]["Id"],
                                ProductId: Results[i]["ProductId"],
                                Product: Results[i]["Product"],
                                RentByCustomerId: Results[i]["RentByCustomerId"],
                                RentByCustomer: Results[i]["RentByCustomer"],
                                RentDateStart: Results[i]["RentDateStart"],
                                RentDateEnd: Results[i]["RentDateEnd"],
                                IsRented: Results[i]["IsRented"],
                                Price: Results[i]["Price"],
                                CompleteAddress: Results[i]["Street"] + ", " + Results[i]["Town"] + ", " + Results[i]["City"],
                                Street: Results[i]["Street"],
                                Town: Results[i]["Town"],
                                City: Results[i]["City"]
                            });
                        }
                    }
                    $('#tblvideokerent').dataTable({
                        aaData: VideokeReservationNotificationList,
                        aoColumns: [
                                { mData: 'EditId' },
                                { mData: 'DeleteId' },
                                { mData: 'RentDateEnd' },
                                { mData: 'Product' },
                                { mData: 'RentByCustomer' },
                                { mData: 'CompleteAddress' },
                                { mData: 'Price' },

                        ]
                    });
                }
            });
            return VideokeReservationNotificationList;
        }





        function getVideokeReservationNotificationList() {
            VideokeRentNotificationList = new Array();
            $.ajax({
                url: '/api/videokeRent/list',
