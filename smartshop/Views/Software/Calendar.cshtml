    <script type="text/javascript">
        // globla varialbles
        var calendarReservations;
        var calendarRentals;

        //get customers
        function getCalendarReservation() {
            calendarReservations = new Array();
            $.ajax({
                url: '/api/calendarReservation/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {
                    if (Results.length > 0) {
                        for (i = 0; i < Results.length; i++) {
                            calendarReservations.push({
                                Id: Results[i]["Id"],
                                CustomersIdReserved: Results[i]["CustomersIdReserved"],
                                CustomersReserved: Results[i]["CustomersReserved"],
                                ReservedDate: Results[i]["ReservedDate"]
                            });
                        }
                    }
                    $('#tblCalendarReserve').dataTable({
                        aaData: calendarReservations,
                        aoColumns: [
                                { mData: 'ReservedDate' },
                                { mData: 'CustomersReserved' },
                        ]
                    });
                }
            });
            return calendarReservations;
        }

        function myFunction() {
            var x = document.getElementById("myDate").value;
            document.getElementById("demo").value = x;
            calendarReservations = new Array();
            $.ajax({
                url: '/api/getCalendarResevation/' + x,
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {
                    if (Results.length > 0) {
                        for (i = 0; i < Results.length; i++) {
                            calendarReservations.push({
                                Id: Results[i]["Id"],
                                CustomersIdReserved: Results[i]["CustomersIdReserved"],
                                CustomersReserved: Results[i]["CustomersReserved"],
                                ReservedDate: Results[i]["ReservedDate"]

                            });
                        }
                    }
                   
                    var table = $('#tblCalendarReserve').DataTable();
                    table.destroy();
                    setTimeout(function () {
                        $('#tblCalendarReserve').dataTable({
                            aaData: calendarReservations,
                            aoColumns: [
                                    { mData: 'ReservedDate' },
                                    { mData: 'CustomersReserved' },
                            ]
                        });
                    }, 50);
                   
                }
            });
            return calendarReservations;
        }

        //get customers
        function getCalendarRental() {
            calendarRentals = new Array();
            $.ajax({
                url: '/api/calendarRental/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {
                    if (Results.length > 0) {
                        for (i = 0; i < Results.length; i++) {
                            calendarRentals.push({
                                Id: Results[i]["Id"],
                                CustomersIdRented: Results[i]["CustomersIdRented"],
                                CustomersRent: Results[i]["CustomersRent"],
                                RentedDate: Results[i]["RentedDate"]
                            });
                        }
                    }
                    $('#tblCalendarRental').dataTable({
                        aaData: calendarRentals,
                        aoColumns: [
                                { mData: 'RentedDate' },
                                { mData: 'CustomersRent' },
                        ]
                    });
                }
            });
            return calendarRentals;
        }

        function myFunction() {
            var x = document.getElementById("calendarRenta").value;
            document.getElementById("rentalDate").value = x;
            calendarRentals = new Array();
            $.ajax({
                url: '/api/getCalendarRental/' + x,
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {
                    if (Results.length > 0) {
                        for (i = 0; i < Results.length; i++) {
                            calendarRentals.push({
                                Id: Results[i]["Id"],
                                CustomersIdRented: Results[i]["CustomersIdRented"],
                                CustomersRent: Results[i]["CustomersRent"],
                                RentedDate: Results[i]["RentedDate"]

                            });
                        }
                    }

                    var table = $('#tblCalendarRental').DataTable();
                    table.destroy();
                    setTimeout(function () {
                        $('#tblCalendarRental').dataTable({
                            aaData: calendarRentals,
                            aoColumns: [
                                    { mData: 'RentedDate' },
                                    { mData: 'CustomersRent' },
                            ]
                        });
                    }, 50);

                }
            });
            return calendarRentals;
        }

        // On Load Page
        $(document).ready(function () {
            var now = new Date();

            var day = ("0" + now.getDate()).slice(-2);
            var month = ("0" + (now.getMonth() + 1)).slice(-2);
            var today = now.getFullYear() + "-" + (month) + "-" + (day);

            $('#myDate').val(today);
            $('#calendarRenta').val(today);
            getCalendarReservation();
            $('#tabs').tab();

            $('#menuReservation').click(function () {
                $('#reservation').show();
                $('#rental').hide();
            });

            $('#menuRental').click(function () {
                $('#rental').show();
                $('#reservation').hide();
                getCalendarRental();
                window.getCalendarRental = function () {
                    return true;
                }
            });
        });
    </script>



