    @Scripts.Render("~/Scripts/js")
    <script type="text/javascript">
        // globla varialbles
        var customers;

        //get customers
        function getCustomer() {
            customers = new Array();
            $.ajax({
                url: '/api/customer/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {
                    if (Results.length > 0) {
                        for (i = 0; i < Results.length; i++) {
                            customers.push({
                                EditId: '<button class="btn btn-primary btn-sm btn-block" onclick="btnEditButton()"><span class="glyphicon glyphicon-edit"></span> Edit</button>',
                                DeleteId: '<button class="btn btn-danger btn-sm btn-block" onclick="btnDeleteButton()"><span class="glyphicon glyphicon-trash"></span> Delete</button>',
                                Id: Results[i]["Id"],
                                CustomerNumber: Results[i]["CustomerNumber"],
                                CustomerName: Results[i]["CustomerName"],
                                CustomerAddress: Results[i]["CustomerAddress"]
                            });
                        }
                    }
                    $('#table_id').dataTable({
                        aaData: customers,
                        aoColumns: [
                                { mData: 'EditId' },
                                { mData: 'DeleteId' },
                                { mData: 'CustomerNumber' },
                                { mData: 'CustomerName' },
                                { mData: 'CustomerAddress' }
                        ]
                    });
                }
            });
            return customers;
        }

        // Add Customer
        function btnSaveCustomer() {
            var customerObject = new Object();

            customerObject.CustomerNumber = document.getElementById('customer_CustomerNumber').value;
            customerObject.CustomerName = document.getElementById('customer_CustomerName').value;
            customerObject.CustomerAddress = document.getElementById('customer_CustomerAddress').value;
            var customerData = JSON.stringify(customerObject);

            var isValid = true;
            $('.requiredCustomer').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                }
                else {
                    $(this).css({
                        "border": "",
                    });
                }
            });
            if (isValid == false) {
                toastr.error("Invalid Entry");
            }
            else
            {
                var customerId = document.getElementById('customer_Id').value;
                if (customerId == 0) {
                    $.ajax({
                        type: "POST",
                        url: '/api/customer/add',
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data: customerData,
                        statusCode: {
                            200: function () {
                                location.reload();
                            },
                            404: function () {
                                alert("Not Found");
                            },
                            500: function () {
                                alert("Bad Request");
                            }
                        }
                    });
                } else {
                    $.ajax({
                        type: "PUT",
                        url: '/api/updateCustomer/' + customerId,
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data: customerData,
                        statusCode: {
                            200: function () {
                                location.reload();
                            },
                            404: function () {
                                alert("Not Found");
                            },
                            500: function () {
                                alert("Bad Request");
                            }
                        }
                    });
                }
            }
        }

        // edit
        function btnEditButton() {
            $('#myModal').modal({
                show: true,
                backdrop: 'static'
            });

            $('.requiredCustomer').each(function () {
                $(this).css({
                    "border": "",
                });
            });

            var table = $('#table_id').DataTable();

            $('#table_id tbody').on('click', 'tr', function () {
                document.getElementById('customer_Id').value = table.row(this).data().Id;
                document.getElementById('customer_CustomerNumber').value = table.row(this).data().CustomerNumber;
                document.getElementById('customer_CustomerName').value = table.row(this).data().CustomerName;
                document.getElementById('customer_CustomerAddress').value = table.row(this).data().CustomerAddress;
            });
        }

        // delete
        function btnDeleteButton() {
            $('#myModalDelete').modal({
                show: true,
                backdrop: 'static'
            });
            var table = $('#table_id').DataTable();
            $('#table_id tbody').on('click', 'tr', function () {
                document.getElementById('deleteCustomerId').value = table.row(this).data().Id;
            });
        }
        function btnDeleteCustomer() {
            var customerId = document.getElementById('deleteCustomerId').value;

            $.ajax({
                type: "DELETE",
                url: '/api/deleteCustomer/' + customerId,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        location.reload();
                    },
                    404: function () {
                        alert("Not Found");
                    },
                    500: function () {
                        alert("Bad Request");
                    }
                }
            });
        }

        // Add
        function btnAddButton() {
            $('#myModal').modal({
                show: true,
                backdrop: 'static'
            });

            $('.requiredCustomer').each(function () {
                $(this).css({
                    "border": "",
                });
            });

            var customerLastNumber = new Array();
            $.ajax({
                url: '/api/customer/listLastCustomerNumber',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (Results) {
                    if (Results.length > 0) {
                        customerLastNumber.push({
                            EditId: '<button class="btn btn-primary btn-sm btn-block" onclick="btnEditButton()"><span class="glyphicon glyphicon-edit"></span> Edit</button>',
                            DeleteId: '<button class="btn btn-danger btn-sm btn-block" onclick="btnDeleteButton()"><span class="glyphicon glyphicon-trash"></span> Delete</button>',
                            Id: Results.Id,
                            CustomerNumber: Results.CustomerNumber,
                            CustomerName: Results.CustomerName,
                            CustomerAddress: Results.CustomerAddress
                        });


                    }

                    var CustomerNumberDefault = Results.CustomerNumber;

                    console.log("lahos sud");

                    document.getElementById('customer_Id').value = 0;
                    document.getElementById('customer_CustomerNumber').value = parseInt(CustomerNumberDefault) + 1;
                    document.getElementById('customer_CustomerName').value = "";
                    document.getElementById('customer_CustomerAddress').value = "";
                }
            });

            console.log("lahos gawas");
        }

        // On Load Page
        $(document).ready(function () {
            document.getElementById('customer_CustomerNumber').disabled = true;

            getCustomer();
        });
    </script>
